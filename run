#!/bin/bash

if [ -z "$1" ]; then
  echo "Usage: ./run <DayNumber> (e.g., ./run 01)"
  exit 1
fi

DAY_FILE="src/Day$1.java"

if [ ! -f "$DAY_FILE" ]; then
  echo "‚ùå Error: Could not find '$DAY_FILE'."
  echo "   Did you forget to create the class for Day $1?"
  exit 1
fi

javac -d bin -sourcepath src "$DAY_FILE"

if [ $? -eq 0 ]; then
  echo "--- Running Day $1 ---"
  java -cp bin "Day$1"
else
  echo "Compilation failed."
fi